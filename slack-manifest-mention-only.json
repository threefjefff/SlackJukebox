{
    "display_information": {
        "name": "Stack Jukebox"
    },
    "features": {
        "app_home": {
            "home_tab_enabled": true,
            "messages_tab_enabled": false,
            "messages_tab_read_only_enabled": false
        },
        "bot_user": {
            "display_name": "Stack Jukebox",
            "always_online": true
        },
        "shortcuts": [
            {
                "name": "Create the jam playlist",
                "type": "global",
                "callback_id": "create-jam-playlist",
                "description": "Creates this week's Jam playlist"
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "chat:write",
                "app_mentions:read",
                "commands"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "app_mention"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}